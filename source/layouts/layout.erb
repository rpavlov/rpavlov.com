<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
  <%= stylesheet_link_tag 'normalize' %>
  <%= stylesheet_link_tag 'main' %>
  <%= stylesheet_link_tag 'text' %>

  <title>rpavlov</title>
</head>
<body>
  <header>
    <div>
      <div class="clearfix">
        <h2 class="name"><%= link_to "rpavlov", "/" %></h2>
        <ul>
          <li></li>
        </ul>
      </div>
    </div>
  </header>
  <section id="main" role="main" class="content">
    <div class="posts-wrapper">
      <%= yield %>
    </div>
    <aside class="sidebar">
      <div class="sidebar-item">
        <h3>Howdy stranger</h3>
        <span>
          I solve problems with software. Sometimes software is the problem itself. Shoot me an
          email at <%= mail_to "roumen@rpavlov.com" %>.
        </span>
        <br/>
        <div class="social">
          <a class="twitter" href="http://www.twitter.com/arrpavlov">Github</a>
          <a class="github" href="http://www.github.com/rpavlov">Twitter</a>
          <a class="linkedin" href="http://ca.linkedin.com/pub/roumen-pavlov/1a/263/899">LinkedIn</a>
        </div>
      </div>
      <div class="sidebar-item borderless">
        <h3>Recent Articles</h3>
        <ol>
          <% blog.articles[0...5].each do |article| %>
          <li><a href="<%= article.url %>"><%= article.title %></a></li>
          <% end %>
        </ol>
        <ol>
          <% blog.articles.group_by {|a| a.date.year }.each do |year, articles| %>
          <li>
            <h5 style="margin-bottom:0;"><%= year %></h5>
              <% articles.each do |article| %>
              <br/>
              <a href="<%= article.url %>"><%= article.title %></a>
              <% end %>
          </li>
          <% end %>
        </ol>
      </div>
    </aside>
  </section>
</body>
</html>
