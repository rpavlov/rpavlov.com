---
pageable: true
per_page: 10
---
<% if paginate %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<% page_articles.each_with_index do |article, i| %>
	<article class="post">
  	<h1 class="post-title"><%= link_to article.title, article %></h1>
    <span class="post-meta"><%= article.date.strftime('%e %B %Y') %></span>
  	<p><%= article.body %></p>
  </article>
<% end %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
